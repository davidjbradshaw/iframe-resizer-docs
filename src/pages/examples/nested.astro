---
import { Tabs, TabItem } from "@astrojs/starlight/components";

import JSP from '../../components/js-parent.astro'
import JSC from '../../components/js-child.astro'

---

  <style>
     body {
      margin:14px 10px;
      font-family: Roboto, sans-serif;
      font-weight: lighter;
    }

     iframe {
      width: 100%; 
      border: 3px inset
    }

    iframe#horizontal {
      height: 200px;
      width: 1px ;
      max-width: 100%;
    }
  </style>


  <Tabs>
    <TabItem label="Vertical">
      <iframe 
        id="vertical"
        src="/examples/animate" 
        style="height: 800px;"
        title="Vertical Example">
      </iframe>
    </TabItem>
    <TabItem label="Horizontal">
      <iframe 
        id="horizontal"
        src="/examples/horizontal" 
        title="Horizontal Example">
      </iframe>
    </TabItem>
    <TabItem label="TextArea">
      <iframe 
        id="textarea"
        src="/examples/textarea" 
        title="TextArea Example">
      </iframe>
    </TabItem>
    <TabItem label="Hover">
      <iframe
        id="hover"
        src="/examples/hover" 
        title="Hover Example">
      </iframe>
    </TabItem>
    <!-- <TabItem label="Footer">
      <iframe 
        id="footer"
        src="/examples/footer" 
        title="Footer Example">
      </iframe>
    </TabItem> -->
    <!-- <TabItem label="Nested">
      <iframe 
        id="nested"
        src="/examples/nested" 
        title="Nested Example">
      </iframe> -->
    </TabItem>
  </Tabs>


