---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import Footer from '../components/Footer.astro';
import logo from '../assets/logo-home.svg';

const title = 'IFRAME-RESIZER';
const template = 'splash';

const hero = {
  tagline: 'Keep same and cross domain iframes sized to their content',
  image: {
    file: logo,
  },
  actions: [{
    text: 'Get Started',
    link: 'introduction',
    icon: 'right-arrow',
    variant: 'primary',
  // },{
  //   text: 'Upgarde to v5',
  //   link: 'upgrade',
  //   icon: 'right-arrow',
  //   variant: 'secondary',
  },{
    text: 'View on GitHub',
    link: 'https://github.com/davidjbradshaw/iframe-resizer',
    icon: 'external',
  }]
}

---

<StarlightPage frontmatter={{ title, template, hero }}  hasSidebar={false}>

</StarlightPage>

<Footer/>