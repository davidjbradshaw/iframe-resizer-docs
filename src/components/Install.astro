---
import { Tabs, TabItem } from "@astrojs/starlight/components";
import { Code } from 'astro-expressive-code/components'
export interface Props {
	pkg: string;
}

const { pkg } = Astro.props;
---

<Tabs>
  <TabItem label="npm">
    <Code code="npm install {pkg}" lang="bash" />
  </TabItem>
  <TabItem label="pnpm">
    <Code code="pnpm add {pkg}" lang="bash" />
  </TabItem>
  <TabItem label="Yarn">
    <Code code="yarn add {pkg}" lang="bash" />
  </TabItem>
</Tabs>
