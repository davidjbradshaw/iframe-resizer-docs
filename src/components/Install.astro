---
import { Tabs, TabItem } from "@astrojs/starlight/components";
export interface Props {
	pkg: string;
}

const { pkg } = Astro.props;
---

<Tabs>
  <TabItem label="NPM">
    <pre>
      <code>npm install {pkg}</code>
    </pre>
  </TabItem>
  <TabItem label="Yarn">
    <pre>
      <code>yarn add {pkg}</code>
    </pre>
  </TabItem>
  <TabItem label="PNPM">
    <pre>
      <code>pnpm add {pkg}</code>
    </pre>
  </TabItem>
</Tabs>
